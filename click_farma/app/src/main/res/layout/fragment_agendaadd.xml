<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.materialdesign.activity.HomeFragment"
    android:background="@color/menu2"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_agenda"
        android:gravity="center|top">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_agend1"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_01"
                    android:textSize="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_agend4"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_01"
                    android:textSize="18dp" />
            </LinearLayout>
        </TableRow>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/widget_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:textColorHint="@color/color_03"
            android:textColor="@color/color_03"
            android:layout_marginBottom="10dp"
            android:background="@color/color_01">

            <EditText
                android:id="@+id/Texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/hint_search"
                android:inputType="text"
                android:textColor="@color/color_03"
                android:textColorHint="@color/color_03"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/widget_Hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColorHint="@color/color_03"
            android:textColor="@color/color_03"
            android:layout_marginBottom="10dp"
            android:background="@color/color_01">

            <EditText
                android:id="@+id/HoraIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="@string/hint_hora"
                android:inputType="time"
                android:textColor="@color/color_03"
                android:textColorHint="@color/color_03"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:id="@+id/hora"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_01"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_crearalarm"
            android:id="@+id/btn_crear"
            android:background="@drawable/my_btn_15"
            android:textColor="@color/btn_text1"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:alpha="@string/app_btn_transparency" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_volver"
            android:id="@+id/btn_volver"
            android:background="@drawable/my_btn_15"
            android:textColor="@color/btn_text1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:alpha="@string/app_btn_transparency"/>

    </LinearLayout>


</RelativeLayout>