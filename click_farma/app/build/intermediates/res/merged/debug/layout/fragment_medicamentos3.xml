<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.materialdesign.activity.HomeFragment"
    android:background="@color/menu1"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_med"
        android:gravity="center|top">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_med1"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_01"
                    android:textSize="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_med5"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_01"
                    android:textSize="18dp" />
            </LinearLayout>
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ravotril"
            android:id="@+id/textView5"
            android:textColor="@color/color_01"
            android:textSize="22dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ravotril (Roche) + clonazepam + 0.5 + 1000"
            android:id="@+id/textView6"
            android:textColor="@color/color_01"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprimidos + 0.5"
            android:id="@+id/textView7"
            android:textColor="@color/color_01"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$76.401 CLP"
            android:id="@+id/textView8"
            android:textColor="@color/color_01"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto Disponible"
            android:id="@+id/textView9"
            android:textColor="@color/color_01"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_searchother"
            android:id="@+id/btn_search"
            android:background="@drawable/my_btn_14"
            android:textColor="@color/btn_text1"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:alpha="@string/app_btn_transparency"/>

    </LinearLayout>


</RelativeLayout><!-- From: file:/D:/Proyectos%20Android%20Studio/click_farma/app/src/main/res/layout/fragment_medicamentos3.xml -->