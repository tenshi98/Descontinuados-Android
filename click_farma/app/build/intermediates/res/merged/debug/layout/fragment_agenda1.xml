<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.materialdesign.activity.HomeFragment"
    android:background="@color/menu2"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_agenda"
        android:gravity="center|top"
        android:weightSum="1">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_agend1"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_01"
                    android:textSize="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_agend2"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_01"
                    android:textSize="18dp" />
            </LinearLayout>
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_agend3"
            android:id="@+id/textView4"
            android:textColor="@color/color_01"
            android:textSize="22dp"
            android:layout_marginTop="10dp" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="182dp"
            android:layout_weight="0.78"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_01"
            android:alpha="@string/app_btn_transparency"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_addalarm"
            android:id="@+id/btn_addalarm"
            android:background="@drawable/my_btn_15"
            android:textColor="@color/btn_text1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:alpha="@string/app_btn_transparency"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_volver"
            android:id="@+id/btn_volver"
            android:background="@drawable/my_btn_15"
            android:textColor="@color/btn_text1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:alpha="@string/app_btn_transparency"/>
    </LinearLayout>


</RelativeLayout><!-- From: file:/D:/Proyectos%20Android%20Studio/click_farma/app/src/main/res/layout/fragment_agenda1.xml -->