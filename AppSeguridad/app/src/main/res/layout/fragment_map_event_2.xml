<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btn_event_1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/event_robo"
                android:background="@drawable/my_btn_7"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btn_event_2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/event_microtrafico"
                android:background="@drawable/my_btn_11"
                android:scaleType="fitCenter" />
        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btn_event_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/event_asalto"
                android:adjustViewBounds="false"
                android:background="@drawable/my_btn_8"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btn_event_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/event_homicidio"
                android:background="@drawable/my_btn_12"
                android:scaleType="fitCenter" />
        </TableRow>


        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btn_event_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/event_derrumbes"
                android:background="@drawable/my_btn_2"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btn_event_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/event_pandillas"
                android:background="@drawable/my_btn_13"
                android:scaleType="fitCenter" />
        </TableRow>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <Button android:id="@+id/btnVolver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_volver"
                android:background="@drawable/my_btn_2"
                android:textColor="@color/btn_text1" />

        </LinearLayout>


    </TableLayout>


</RelativeLayout>