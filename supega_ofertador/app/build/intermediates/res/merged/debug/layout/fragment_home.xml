<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    tools:context="info.androidhive.materialdesign.activity.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:id="@+id/tableLayout"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="7dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/topbtn_1"
                    android:layout_weight=".25"
                    android:background="@drawable/icn_ninera"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/topbtn_2"
                    android:layout_weight=".25"
                    android:background="@drawable/icn_jardin"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/topbtn_3"
                    android:layout_weight=".25"
                    android:background="@drawable/icn_gasfiter"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/topbtn_4"
                    android:layout_weight=".25"
                    android:background="@drawable/icn_carpenter"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />
            </LinearLayout>
        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_oferttitle"
                android:id="@+id/textView4"
                android:textColor="@color/input_26"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_ofertbody"
                android:id="@+id/Nombre"
                android:textSize="22dp"
                android:layout_margin="10dp"
                android:gravity="center" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:background="@drawable/icn_personaje_sp"
                    android:layout_above="@+id/tableLayout1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/btnComenzar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/btn_comenzar"
                    android:textColor="@color/btn_text1"
                    android:background="@drawable/my_btn_19"
                    android:layout_weight="1" />

            </LinearLayout>


        </TableLayout>


    </RelativeLayout>




</RelativeLayout><!-- From: file:/D:/Proyectos%20Android%20Studio/supega_ofertador/app/src/main/res/layout/fragment_home.xml -->